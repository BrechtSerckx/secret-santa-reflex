executable backend
  main-is:             Main.hs
  hs-source-dirs:
    src
  other-modules:
    Main
    Polysemy.Email
    SecretSanta.Effect.SecretSanta
    SecretSanta.Server
  ghc-options:
    -O2
    -flate-specialise
    -fspecialise-aggressively
    -fplugin=Polysemy.Plugin
  build-depends:
      base-noprelude >=4.12 && <4.13
    , common
    , reflex-dom
    , servant-server
    , warp
    , wai
    , wai-cors
    , servant-options
    , polysemy
    , polysemy-plugin
  default-language:    Haskell2010
  default-extensions:
    ApplicativeDo
    BlockArguments
    DataKinds
    DeriveGeneric
    DerivingVia
    GADTs
    FlexibleContexts
    FlexibleInstances
    InstanceSigs
    LambdaCase
    MultiParamTypeClasses
    MultiWayIf
    OverloadedLists
    OverloadedStrings
    PackageImports
    PatternSynonyms
    PolyKinds
    RankNTypes
    RecordWildCards
    RecursiveDo
    ScopedTypeVariables
    StrictData
    TemplateHaskell
    TupleSections
    TypeApplications
    TypeOperators
    TypeFamilies
    ViewPatterns
